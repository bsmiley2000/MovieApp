@{
    ViewData["Title"] = "Movie Form";
}

@model MovieApp.Models.ApplicationResponse

<h1>Welcome to the Movie Form!</h1>

<script src="~/lib/bootstrap/js/bootstrap.js"></script>
<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <span asp-validation-for="Year" class="text-danger"></span>

        <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <span asp-validation-for="Director" class="text-danger"></span>

        <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>


        <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" />
        <br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
        <br />
        <br />
        <button type="submit">Submit Appplication</button>

    </form>
</div>

